<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Palettes">

    <LinearLayout
        android:id="@+id/topLayoutLibrary"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <!-- Top Layout -->
        <LinearLayout
            android:id="@+id/topScreenLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!-- Back arrow Layout -->
            <RelativeLayout
                android:id="@+id/backArrowLayout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="40dp"
                android:layout_marginTop="22dp"
                app:layout_constraintStart_toStartOf="@+id/scrollView2"
                app:layout_constraintTop_toTopOf="@+id/scrollView2">

                <!--<ImageView
                    android:id="@+id/imageBackArrowLibrary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="22dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/backarrow" />-->

            </RelativeLayout>
            <!-- Logo Layout -->
            <RelativeLayout
                android:id="@+id/logoLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@+id/scrollView2"
                app:layout_constraintTop_toTopOf="@+id/scrollView2"
                android:layout_marginBottom="40dp">

                <ImageView
                    android:id="@+id/imageLogo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="22dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/logo_vector" />
            </RelativeLayout>

            <!-- Title Palettes -->
            <TextView
                android:id="@+id/textPalettesHead"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="22dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="sans-serif-black"
                android:gravity="center_vertical"
                android:text="Palettes"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <Button
            android:id="@+id/createPaletteButton"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginBottom="20dp"
            android:text="Create Palette"
            app:cornerRadius="15dp"
            android:backgroundTint="#3250BC"
            android:textStyle="bold"/>

        <!--Scroll view -->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollViewPalettes"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linearLayoutVerticalPalettes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:orientation="vertical">

                <!-- Item Palette Template -->
                <LinearLayout
                    android:id="@+id/paletteLinearLayoutVertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="22dp"
                    android:layout_marginBottom="12dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/paletteColorsLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/paletteColorOne"
                            android:layout_width="wrap_content"
                            android:layout_height="70dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginRight="-20dp"
                            android:layout_weight="1"
                            app:cardBackgroundColor="#CDB4DB"
                            app:cardCornerRadius="15dp"
                            app:contentPaddingLeft="20dp" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/paletteColorTwo"
                            android:layout_width="wrap_content"
                            android:layout_height="70dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_weight="1"
                            app:cardBackgroundColor="#FFC8DD"
                            app:cardCornerRadius="0dp"
                            app:cardElevation="2dp" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/paletteColorThree"
                            android:layout_width="wrap_content"
                            android:layout_height="70dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_weight="1"
                            app:cardBackgroundColor="#FFAFCC"
                            app:cardCornerRadius="0dp" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/paletteColorFour"
                            android:layout_width="wrap_content"
                            android:layout_height="70dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_weight="1"
                            app:cardBackgroundColor="#BDE0FE"
                            app:cardCornerRadius="0dp" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/paletteColorFive"
                            android:layout_width="wrap_content"
                            android:layout_height="70dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="-20dp"
                            android:layout_weight="1"
                            app:cardBackgroundColor="#A2D2FF"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="1.99dp"
                            app:contentPaddingRight="20dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutVerticalDescriptionPalette"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/descriptionLayoutRowPalette"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/paletteName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxWidth="200dp"
                                android:singleLine="true"
                                android:text="#Palette 31"
                                android:textColor="#000000"
                                android:textStyle="bold" />

                            <Space
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />


                            <ImageButton
                                android:id="@+id/likeButtonPalette"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:scaleType="fitXY"
                                app:srcCompat="@drawable/ic_action_likebutton" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <!--Allow to show the last item, its hidden by the menu bar otherwise-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="100dp"></View>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
